<h1>{{movie.title}}</h1>

<p><img src="{{movie.image}}" alt=""></p>

<p><strong>Director</strong>: {{movie.director}}</p>
<p><strong>Description</strong>: {{movie.description}}</p>
<p>
  <strong>Stars</strong>: 
  <ul>
    {{#each movie.stars}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
</p>
<p>
  <strong>Show times</strong>: 
  <ul>
    {{#each movie.showtimes}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
</p>

<pre>{{movie}}</pre>
